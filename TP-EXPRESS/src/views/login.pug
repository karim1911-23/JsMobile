extends layout

block content
  .max-w-md.mx-auto.mt-20.bg-white.p-6.rounded.shadow
    h2.text-2xl.font-bold.mb-4.text-center Login
    form(action="/login" method="POST")
      input(type="text" name="username" placeholder="Username" required).w-full.mb-3.p-2.border.rounded
      input(type="password" name="password" placeholder="Password" required).w-full.mb-4.p-2.border.rounded
      button(type="submit").bg-green-500.text-white.px-4.py-2.rounded.w-full Login
    p.text-center.mt-4
      | Don't have an account?
      a.text-green-500(href="/register") Register here
